generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Quote {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  author User? @relation(fields: [userId], references: [id]) 
  userId String?
  name   String
  quote  String
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
  quotes   Quote[]
  role     Role    @default(USER)
}

enum Role {
  USER
  ADMIN
}
